// LogoFallback component to handle logo display with error fallback
function LogoFallback() {
  const [imageError, setImageError] = useState(false);
  
  // This will be replaced with your actual logo import
  const logoSource: ImageSourcePropType = require('@/assets/images/logo.png');

  if (imageError) {
    return (
      <View style={[styles.logoWrapper, { backgroundColor: '#1E40AF' }]}>
        <Text style={styles.logoText}>RW</Text>
      </View>
    );
  }

  return (
    <View style={styles.logoWrapper}>
      <Image 
        source={logoSource}
        style={styles.logo}
        resizeMode="contain"
        onError={() => setImageError(true)}
      />
    </View>
  );
}

